{
  "name": "@sovrn/spoke-template",
  "version": "1.0.0",
  "description": "SOVRN Protocol - National Spoke Template for Government Deployment",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "generate:keys": "node scripts/generate-keys.js",
    "integrity:payout": "node scripts/run-integrity-payout.js"
  },
  "keywords": [
    "sovrn",
    "spoke",
    "national-government",
    "data-sovereignty",
    "blockchain",
    "identity"
  ],
  "author": "SOVRN Protocol",
  "license": "MIT",
  "dependencies": {
    "@sovrn/shared": "workspace:*",
    "express": "^4.18.2",
    "dotenv": "^16.3.1",
    "better-sqlite3": "^9.2.2",
    "node-forge": "^1.3.1",
    "tweetnacl": "^1.0.3",
    "tweetnacl-util": "^0.15.1",
    "zod": "^3.22.4",
    "winston": "^3.11.0",
    "cron": "^3.1.6"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20.10.6",
    "@types/node-forge": "^1.3.10",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0",
    "vitest": "^1.1.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

