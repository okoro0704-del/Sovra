# SOVRN Spoke Template - Environment Configuration
# Copy this file to .env and configure for your national deployment

# ============================================================================
# NATIONAL IDENTITY
# ============================================================================
SPOKE_ID=template
SPOKE_NAME="Template National Spoke"
COUNTRY_CODE=XX
COUNTRY_NAME="Template Country"

# ============================================================================
# DATA SOVEREIGNTY - ENCRYPTION
# ============================================================================
# Generate with: npm run generate:keys
SPOKE_PRIVATE_KEY=your_spoke_private_key_here
SPOKE_PUBLIC_KEY=your_spoke_public_key_here

# Database encryption key (32 bytes, hex-encoded)
# Generate with: openssl rand -hex 32
DATABASE_ENCRYPTION_KEY=your_database_encryption_key_here

# ============================================================================
# GLOBAL HUB CONNECTION
# ============================================================================
# SOVRN Global Hub's official public key (provided by SOVRN Protocol)
GLOBAL_HUB_PUBLIC_KEY=sovrn_hub_official_public_key_here

# Global Hub endpoint
GLOBAL_HUB_ENDPOINT=https://hub.sovrn-protocol.org

# Enable/disable hub connection (set to false for testing)
ENABLE_HUB_CONNECTION=true

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
PORT=3000
NODE_ENV=production
LOG_LEVEL=info

# API rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# SQLite database path (for data sovereignty)
DATABASE_PATH=./data/sovereign.db

# Database backup configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups

# ============================================================================
# INTEGRITY DIVIDEND CONFIGURATION
# ============================================================================
# Enable daily integrity payouts
INTEGRITY_PAYOUT_ENABLED=true

# Cron schedule for integrity payouts (default: daily at midnight)
INTEGRITY_PAYOUT_SCHEDULE="0 0 * * *"

# Minimum verification count to qualify for payout
INTEGRITY_MIN_VERIFICATIONS=1

# Fee split from Global Hub (50% to spoke, distributed to citizens)
INTEGRITY_FEE_PERCENTAGE=50

# ============================================================================
# BLOCKCHAIN CONFIGURATION (Optional)
# ============================================================================
# Deploy as private side-chain (Cosmos SDK)
ENABLE_SIDECHAIN=false
SIDECHAIN_CHAIN_ID=sovrn-spoke-template-1
SIDECHAIN_RPC_PORT=26657
SIDECHAIN_API_PORT=1317
SIDECHAIN_GRPC_PORT=9090

# Validator configuration
VALIDATOR_MONIKER="Template Spoke Validator"
VALIDATOR_COMMISSION_RATE=0.10

# ============================================================================
# SECURITY
# ============================================================================
# JWT secret for internal authentication
JWT_SECRET=your_jwt_secret_here

# CORS allowed origins (comma-separated)
CORS_ORIGINS=https://admin.template-spoke.gov

# Enable audit logging
AUDIT_LOG_ENABLED=true
AUDIT_LOG_PATH=./logs/audit.log

# ============================================================================
# MONITORING & ALERTS
# ============================================================================
# Prometheus metrics
METRICS_ENABLED=true
METRICS_PORT=9090

# Alert email for critical events
ALERT_EMAIL=admin@template-spoke.gov

# ============================================================================
# COMPLIANCE
# ============================================================================
# Data retention policy (days)
DATA_RETENTION_DAYS=2555

# Enable GDPR compliance features
GDPR_ENABLED=true

# Enable data export for citizens
CITIZEN_DATA_EXPORT_ENABLED=true

