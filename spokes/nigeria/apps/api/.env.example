# Supabase Configuration
SUPABASE_URL=your_supabase_url_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Security
HMAC_SECRET=your_hmac_secret_key_here_change_in_production

# Sovereign Secret: audit endpoints require header x-sovryn-key matching this value.
# Supabase Webhook: set the request header x-sovryn-key to this exact value.
SOVRYN_SECRET=your_sovryn_secret_here

# SOVRYN Chain: after successful Manual Audit, client redirects here (PFF Frontend).
# Set to your PFF Netlify URL so auth redirect points back to PFF.
AUTH_REDIRECT=https://your-pff-frontend.netlify.app

# SOVRYN releaseVidaCap() addresses (optional; fallbacks in code)
# ARCHITECT_VAULT_ADDRESS=0x...
# NIGERIA_NATIONAL_BLOCK_ADDRESS=0x...
# NATIONAL_ESCROW_ADDRESS=0x...  (fallback for national block)
# Unified Foundation: 1 VIDA always routes here regardless of Spoke (Nigeria, Ghana, UK, etc.)
GLOBAL_FOUNDATION_VAULT=0xFOUNDATION_PLACEHOLDER
# FOUNDATION_ADDRESS=0x...  (alternative env name)
# Default country when get_citizen_nationality cannot determine (e.g. NG, GH, GB)
SPOKE_COUNTRY_CODE=NG
