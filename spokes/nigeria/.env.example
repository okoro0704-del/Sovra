# SOVRN Protocol - Nigerian Spoke Environment Variables

# ============================================================================
# Supabase Configuration
# ============================================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.your-project.supabase.co:5432/postgres

# ============================================================================
# API Configuration
# ============================================================================
PORT=3000
NODE_ENV=development
API_SECRET_KEY=your-secret-key-for-hmac-hashing

# ============================================================================
# Token Economics (Nigerian Spoke)
# ============================================================================
DEFAULT_MINT_AMOUNT=1.0
FIRST_TIME_BONUS=5.0
MAX_MINTS_PER_DAY=10
COOLDOWN_PERIOD_MINUTES=60

# ============================================================================
# NIMC Integration (Nigerian Identity Management)
# ============================================================================
NIMC_API_ENDPOINT=https://api.nimc.gov.ng/verify
NIMC_API_KEY=your-nimc-api-key
NIMC_ENABLED=false

# ============================================================================
# Security
# ============================================================================
HMAC_SECRET=your-hmac-secret-key-for-biometric-hashing
API_KEY_ROTATION_DAYS=90

# ============================================================================
# Redis Configuration (Fast-Track Temporal Cache)
# ============================================================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_TLS_ENABLED=false

# ============================================================================
# Features
# ============================================================================
MOBILE_MONEY_ENABLED=false
USSD_ENABLED=false
OFFLINE_MODE_ENABLED=true

